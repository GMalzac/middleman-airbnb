
<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->

<div class="home-content">
  <%= image_tag "https://kitt.lewagon.com/placeholder/cities/#{flat.city_slug}", class: "banner-small" %>
</div>

<div class="container">
  <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle image-medium" %>
  <p><%= flat.name %></p>
  <h1><%= flat.description %></h1>
  <p><%= flat.city_name %></p>
</div>



